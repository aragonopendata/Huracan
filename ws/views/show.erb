<header class="nav">
  <a href="/" class="back"><i class="icon i-l i-back"></i></a>

  <h1 class="site-title truncate">Los mil nombres de la ermita de San Martín</h1>
</header>

<div class="content">
  <div id="map"></div>

  <div class="results">
    <ul>
      <li class="result clearfix">
        <div class="result-header clearfix">
          <img src="/img/thumbnails/peonera_ermita_ficha.jpg" alt="" height="80px" width="80px" class="result-thumbnail" />

          <h3 class="result-title">Los mil nombres de la ermita de San Martín</h3>
          <div class="result-description">
            <p><i class="icon i-distance"></i><%= @cartodb_obj['horizontal_distance'].to_f/1000 %> km</p>
            <p><i class="icon i-time"></i><%= @cartodb_obj['aproximated_time'] %> minutes</p>
          </div>
        </div>
        <div>
          <img src="/track/<%= @track_id %>/altitude_profile.png">
        </div>
        <div>
          <div>
            <strong>Elevación máxima: </strong><span><%= @distances[:max_elevation] %> km</span>
          </div>
        </div>

        <div class="result-content">
          <p>
          <%= @cartodb_obj['_desc'] %>
          </p>
        </div>
      </li>
    </ul>
  </div>
</div>
